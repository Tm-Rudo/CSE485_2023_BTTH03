{% extends 'layout.twig' %}
{% block content %}

<main class="container mt-5 mb-5">
    <div class="row">
        <div class="col-sm">
            <h1>User</h1>
            <a href="./index.php?action=add" class="btn btn-success">Thêm mới</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody>
                        {% for each in users %} 
                            <tr>
                                <th scope="row">{{each.id}}</th>
                                <td>{{each.name}}</td>
                                <td>{{each.email}}</td>
                                <td>
                                    <a href="./index.php?action=edit&id={% set id=each.id %}{{id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                                </td>
                                <td>
                                    <a href="./index.php?action=delete&id={% set id=each.id %}{{id}}"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %}